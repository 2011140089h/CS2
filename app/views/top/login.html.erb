<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<%= form_tag "/top/login", method: :post do %>
    <p><%= label_tag :uid, "ユーザーID" %></p>
    <%= text_field_tag :uid %>
    <%= label_tag :pass, "パスワード" %></p>
    <p><%= password_field_tag :password %>
    <%= submit_tag "登録" %>
<% end %>